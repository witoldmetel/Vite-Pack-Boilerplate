{
  "name": "ts-parcel-boilerplate",
  "version": "3.0.0",
  "description": "Starter pack for building TypeScript apps",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepare": "husky install",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx src",
    "lint:fix": "eslint --fix --ext .js,.ts,.jsx,.tsx src",
    "format": "yarn run lint --fix & yarn prettier --write 'src/**/*.{js,jsx,ts,tsx}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/witoldmetel/TS-Parcel-Boilerplate.git"
  },
  "keywords": [
    "vite",
    "typescript",
    "react",
    "boilerplate"
  ],
  "author": "Witold Metel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/witoldmetel/TS-Parcel-Boilerplate/issues"
  },
  "homepage": "https://witoldmetel.github.io/TS-Parcel-Boilerplate",
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "12.1.5",
    "@testing-library/react-hooks": "8.0.0",
    "@testing-library/user-event": "13.5.0",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "@types/react-test-renderer": "18.0.0",
    "@typescript-eslint/eslint-plugin": "5.41.0",
    "@typescript-eslint/parser": "5.41.0",
    "@vitejs/plugin-react": "2.1.0",
    "@vitest/ui": "0.24.3",
    "eslint": "8.9.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.27.0",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "8.0.1",
    "jsdom": "20.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "pretty-quick": "^3.1.3",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4",
    "vite": "3.1.0",
    "vitest": "0.24.3"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn format"
    ]
  }
}
